          </article>
        </div>
      </div>
    </section>
    <br>
    <br>
    <br>
<hr>
<section>
  <h3 class="fs-6" style="margin-bottom: 15rem;"> <span>03 </span>Components</h3>
  <!-- <h3 class="fs-6">Large Button</h3> -->
  <LargeButton link="#"> EXPLORE </LargeButton>
  <hr>
  <h3 class="fs-6">Navigation</h3>
   <Header currentPage={0}></Header>
  <hr>
  <h3 class="fs-6">Tabs</h3>
  <Tabs />
  <hr>
  <h3 class="fs-6">Pagination</h3>
  <h4 class="fs-7">Button Dots</h4>
  <TabCircleBtn></TabCircleBtn>
  <h4 class="fs-7">Dots</h4>
