---
import Header from "../components/Header.astro";
import LargeButton from "../components/Large-button.astro";
import PaginationDots from "../components/Pagination-dots.astro";
import PaginationNumbers from "../components/Pagination-numbers.astro";
import TabCircleBtn from "../components/Tab-circle-btn.astro";
import Tabs from "../components/Tabs.astro";
import Layout from "../layouts/Layout.astro";

---

<Layout title="Design System" >
	<main class="container">

    <section> 
      <p class="text-accents m-0 fs-6"> <span>01 </span>Colors</p>
      <p class="fs-7">Blue</p>
      <div class="flex fs-9">
        <article class="color bg-dark">
          <div class="" style="outline: 1px solid #d0d6f9; padding: 1rem">
            <p class="m-0">#0b0d17</p>
            <p class="m-0">BLUE-900</p>
          </div>

          <p class=""> <span class="">RGB</span>  11, 13, 23</p>
          <p class=""> <span class="">HSL</span>  230 35% 7%</p>
        </article>
        <article class="color ">
          <div class="bg-accent text-dark" style="outline: 1px solid #0b0d17; padding: 1rem">
            <p class="m-0">#d0d6f9</p>
            <p class="m-0">BLUE-300</p>
          </div>

          <p class=""> <span class="">RGB</span>  208, 214, 249</p>
          <p class=""> <span class="">HSL</span>  231 77% 90%</p>
        </article>
      </div>

      <p class="fs-7">White</p>
      <div class="flex fs-9">
        <article class="color">
          <div class="bg-white text-dark" style="outline: 1px solid #fff; padding: 1rem">
            <p class="m-0">#fff</p>
            <p class="m-0">WHITE</p>
          </div>

          <p class=""> <span class="">RGB</span>  255, 255, 255</p>
          <p class=""> <span class="">HSL</span>  0 0% 100%</p>
        </article>
      </div>
    </section>
<hr>
    <section>
      <p class="fs-6"> <span>02 </span>Typography</p>
      <div class="flex">

        <div class="flow width-50">
          <article class="">
              <p class=" fs-8 ">Text Preset 1 - Bellefair Regular</p>
              <p class=" fs-8 text-accent">144px - 171.9% Line Height (Normal) - 0px Letter Spacing</p>
              <p class="m-0 fs-1 ff-serif">EARTH</p>
          </article>
          <article class="">
              <p class="fs-8 ">Text Preset 2 - Bellefair Regular</p>
              <p class="fs-8 text-accent">100px - 114.6% Line Height (Normal) - 0px Letter Spacing</p>
              <p class="m-0 fs-2 ff-serif">VENUS</p>
          </article>
          <article class="">
              <p class=" fs-8 ">Text Preset 3 - Bellefair Regular</p>
              <p class=" fs-8 text-accent">56px - 64.2% Line Height (Normal) - 0px Letter Spacing</p>
              <p class="m-0 fs-3 ff-serif">JUPITER & SATURN</p>
          </article>
          <article class="">
              <p class=" fs-8 ">Text Preset 4 - Bellefair Regular</p>
              <p class=" fs-8 text-accent">32px - 36.7% Line Height (Normal) - 0px Letter Spacing</p>
              <p class="m-0 fs-4 ff-serif">URANUS, NEPTUNE, & PLUTO</p>
          </article>
          <article class="">
              <p class=" fs-8 ">Text Preset 5 - Barlow Condensed Regular</p>
              <p class=" fs-8 text-accent">28px - 33.6% Line Height (Normal) - 4px Letter Spacing</p>
              <p class="m-0 fs-5 ff-sans-cond">HAUMEA, SEDNA, ERIS, & CERES</p>
          </article>
        </div>
        <div class="flow width-50">
          <article class="">
